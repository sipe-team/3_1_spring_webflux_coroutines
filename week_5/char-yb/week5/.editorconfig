# top-most EditorConfig file
root = true

[*]
# [encoding-utf8]
charset = utf-8

# [newline-lf]
end_of_line = lf

# [newline-eof]
insert_final_newline = true

[*.bat]
end_of_line = crlf

[*.{kt, kts}]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = tab
trim_trailing_whitespace = true
insert_final_newline = true
tab_width = 4
max_line_length = 120

# [no-wildcard-imports]
ktlint_no-wildcard-imports = disabled
ktlint_standard_no-wildcard-imports = disabled
ktlint_standard_package-name = disabled
